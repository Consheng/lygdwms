<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/lin_parent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/back_style_gray"
              android:minWidth="380dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_38dp"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_marginTop="@dimen/_6dp"
            android:text="命中装车清单第（1）项："
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_14sp"/>

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item1"
            android:layout_marginStart="@dimen/_6dp"
            android:text="品名：LED 车库灯"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item2"
            android:layout_marginStart="@dimen/_6dp"
            android:text="订单号：XSDD123456"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_item4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item3"
            android:layout_marginStart="@dimen/_16dp"
            android:text="共需数量：100"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_item5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item4"
            android:layout_marginStart="@dimen/_6dp"
            android:text="已扫码数量："
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_item6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item5"
            android:layout_marginStart="@dimen/_6dp"
            android:text="条码数量："
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_item7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item6"
            android:layout_marginStart="@dimen/_6dp"
            android:text="本次录入数量："
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_item8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item7"
            android:layout_marginStart="@dimen/_6dp"
            android:text="计入本次后，共计扫码数量（100）"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_item9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item8"
            android:layout_marginStart="@dimen/_80dp"
            android:text="还欠数量（10）"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_item10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item9"
            android:layout_marginStart="@dimen/_80dp"
            android:text="超装数量（0）"
            android:textColor="@color/c_666666"
            android:textSize="@dimen/_12sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="120dp"
            android:layout_height="@dimen/_38dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:background="@drawable/btn_gray1_selector"
            android:textColor="@color/c_555555"
            android:textSize="@dimen/_16sp"
            android:text="放弃重扫"
        />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="120dp"
            android:layout_height="@dimen/_38dp"
            android:layout_marginStart="@dimen/_10dp"
            android:background="@drawable/btn_blue_selector"
            android:text="确认操作"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/white"
        />

    </LinearLayout>

</LinearLayout>
